<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">#f8f8f9
        </item>
    </style>

    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/themeColorBlue</item>
    </style>

    <style name="accountHint" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">0.7</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/themeColorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="accountEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/account_bg_edittext</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:radius">18dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textInputColor</item>
    </style>

    <style name="accountButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/bg_capsule_blue</item>
        <item name="android:padding">0dp</item>
        <item name="android:radius">20dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="accountSVGIcon">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:color">@color/themeColorBlack</item>
        <item name="android:alpha">0.9</item>
    </style>

    <style name="mainTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/themeColorBlack</item>
    </style>

    <style name="miniMainTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/themeColorBlack</item>
    </style>

    <style name="subTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/themeColorBlack</item>
        <item name="android:alpha">0.5</item>
    </style>

    <style name="todoDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>
    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
