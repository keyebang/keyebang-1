<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/secondHandBookContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.shg.keyebang.view.general.TitleBarLayout
            android:id="@+id/secondHandBookTitleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.github.jdsjlzx.recyclerview.LRecyclerView
            android:id="@+id/secondHandBookRecycler"
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"/>


    </LinearLayout>

    <com.lijiankun24.shadowlayout.ShadowLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:shadowColor="#0D000000"
        app:shadowRadius="8dp"
        app:shadowDy="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/addSecondHandButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/bg_round_blue">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/ic_add_white_24dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.lijiankun24.shadowlayout.ShadowLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

