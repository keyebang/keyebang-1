<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/classCard"
    android:layout_width="62dp"
    android:layout_height="128dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:background="@drawable/bg_coursetable_coursecard">

    <TextView
        android:id="@+id/courseName"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="6dp"
        android:text="丢孔杰平啊啊"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/themeColorWhite"
        android:maxLines="2"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/coursePlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/courseName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="6dp"
        android:text="丢孔杰平"
        android:textSize="11sp"
        android:alpha="0.7"
        android:textColor="#FFFFFF"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/coursePlace"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="6dp"
        android:text="丢孔杰平"
        android:textSize="11sp"
        android:alpha="0.7"
        android:textColor="@color/themeColorWhite"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/todoTime"
        android:layout_width="28dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="43dp"
        android:layout_marginLeft="6dp"
        android:text="00.00"
        android:textSize="9sp"
        android:textStyle="bold"
        android:textColor="@color/themeColorWhite"
        android:alpha="0.7"
        android:maxLines="1"
        android:ellipsize="end"/>

    <ImageView
        android:id="@+id/todoTag"
        android:layout_width="20dp"
        android:layout_height="1.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="48dp"
        android:layout_marginRight="6dp"
        android:background="@drawable/bg_roundrectangle_white"
        android:alpha="0.7">
    </ImageView>

    <TextView
        android:id="@+id/todoTitle"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/todoTag"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="6dp"
        android:text="丢孔杰平啊丢你啊"
        android:textSize="10dp"
        android:textStyle="bold"
        android:textColor="@color/themeColorWhite"
        android:maxLines="2"
        android:ellipsize="end"/>



</androidx.constraintlayout.widget.ConstraintLayout>


